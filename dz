       <script type="text/javascript">
    function c(val) {
    document.getElementById("c").value = val;
}
function v(val) {
    document.getElementById("c").value += val;
}
function e() {
    try {
        var Formula = document.getElementById("c").value;
        var Result =eval(Formula);
        c(Result)
        document.getElementById("History").innerHTML += Formula +"="+Result + "<br/>";
    } catch (e) {
        c('Error')
    }
}
 
 </script>
 <style type="text/css">
   ul li {
     display: inline-block;
     list-style-type: none;
 }
